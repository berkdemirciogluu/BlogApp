@using BlogApp.EntityLayer.Concrete
@using BlogApp.CoreLayer.Utilities.Results
@model SuccessDataResult<List<Blog>>

<div class="tech-btm">
    <h3>Latest Posts</h3>
    @foreach (var blog in Model.Data)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blogs/BlogDetails/@blog.Id">
                    <img src="@blog.Image" class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">
                <h5>
                    <a href="/Blogs/BlogDetails/@blog.Id">@blog.Content.Substring(0, blog.Content.Substring(0, 50).LastIndexOf(" "))...</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock">@(((DateTime)blog.CreatedDate).ToString("dd/MMM/yyyy"))</i>
                    </span>
                </div>
            </div>
        </div>
    }
</div>
