@using BlogApp.EntityLayer.Concrete
@model Author
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">About Author</h4>
                <h1>Hi @ViewBag.User! Welcome Back</h1>
                <div class="d-flex mt-5 align-items-top">
                    <img src="@Model.Image" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        <h5 class="mr-2 mb-2">@Model.Name - @Model.Email.</h5>
                        <p class="mb-0 font-weight-light">@Model.About</p>
                    </div>
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>