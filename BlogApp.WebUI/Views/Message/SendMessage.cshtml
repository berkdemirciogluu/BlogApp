@model BlogApp.EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

<h1>New Message</h1>
<br />
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("To:")
    @*@Html.TextBoxFor(x => x.S, new { @class = "form-control" })*@
    <input type="text" class="form-control" />
    <br />
    @Html.Label("Subject")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("Content")
    @Html.TextAreaFor(x => x.Details, 10,3, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Send</button>
}

