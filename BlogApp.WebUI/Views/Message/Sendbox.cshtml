@using BlogApp.EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

<h1>Sendbox</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>To</th>
        <th>Date</th>
        <th>See Message</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.Id</th>
    <td>@item.Subject</td>
    <td>@item.AuthorReceiver.Name</td>
    <td>@(((DateTime)item.Date).ToString("dd/MMM/yyyy"))</td>
    <td><a href="/Message/MessageDetails/@item.Id" class="btn btn-warning">See Message</a></td>
</tr>
}
</table>
<a href="/Message/SendMessage/" class="btn btn-primary">Create New Message</a>

