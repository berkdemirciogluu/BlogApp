@using BlogApp.EntityLayer.Concrete
@using BlogApp.CoreLayer.Utilities.Results
@model SuccessDataResult<List<About>>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="zxx">

<body>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">About</h3>
            <div class="row inner-sec">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">

                        <div class="blog_info_left_grid">
                            <a href="single.html">
                                <img src="~/BlogAppThema/images/b5.jpg" class="img-fluid" alt="">
                            </a>
                        </div>
                        <h3>
                            Who we are ?
                        </h3>
                        @foreach (var about in Model.Data)
                        {
                            <p>
                                @about.Details1
                            </p>
                        }
                        <a href="single.html" class="btn btn-primary read-m">Read More</a>
                    </div>
                </div>
                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/BlogAppThema/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        @await Html.PartialAsync("~/Views/NewsLetters/SubscribeMail.cshtml")
                        @await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")

                        <div class="tech-btm">
                            <h4>Recent Posts</h4>
                            @await Component.InvokeAsync("AuthorRecentBlogs")
                        </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
</body>

</html>

